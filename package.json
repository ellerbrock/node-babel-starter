{
  "name": "node-babel-starter",
  "description": "Node Babel Quickstart",
  "version": "0.0.1",
  "author": "Maik Ellerbrock <opensource@frapsoft.com> (https://github.com/ellerbrock)",
  "main": "dist/index.js",
  "license": "MIT",
  "repository": {
    "url": "git@github.com:ellerbrock/node-babel-starter.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/ellerbrock/node-babel-starter/issues"
  },
  "keywords": [
    "node-boilerplate",
    "node-skeleton",
    "node-starter",
    "node-babel"
  ],
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production babel src -d dist",
    "start": "nodemon $2 --exec babel-node",
    "lint": "eslint --fix src",
    "updateall": "ncu -ua && yarn"
  },
  "files": [
    "dist"
  ],
  "babel": {
    "presets": [
      "es2015-node6"
    ],
    "env": {
      "production": {
        "plugins": [
          "add-module-exports"
        ],
        "presets": [
          "es2015",
          "babili"
        ]
      }
    }
  },
  "extends": "standard",
  "plugins": [
    "standard",
    "promise"
  ],
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2015-node6": "^0.4.0",
    "babili": "^0.1.0",
    "cross-env": "^5.0.0",
    "eslint": "3.17.0",
    "eslint-config-standard": "11.0.0-beta.0",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "2.2.0",
    "rimraf": "^2.5.4"
  }
}
